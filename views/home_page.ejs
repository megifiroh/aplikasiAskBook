<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container text-end mt-2">
        <form action="/logout" method="POST">
            <span>Welcome <%= userName %></span>
            <button type="submit" class="btn btn-warning">Logout</button>
        </form>        
    </div>
    <div class="container mt-1" id="main">
        <form action="" method="get" class="form-control" id="filter">
            <div class="row">
                <div class="col-6">
                    <label for="searchInput">Search by Title or Description</label>
                    <br>
                    <input class="form-control" type="text" id="searchInput" placeholder="Search...">
                </div>
                <div class="filters col-3">
                    <label class="form-label" for="authorDropdown" style="margin-bottom: 0;">Author</label>
                    <select id="authorDropdown" class="form-select">
                        <option value="">None</option>
                        <% authors.forEach(author => { %>
                            <option value="<%= author %>"><%= author %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="filters col-3">
                    <label class="form-label" for="categoryDropdown" style="margin-bottom: 0;">Category</label>
                    <select id="categoryDropdown" class="form-select">
                        <option value="">None</option>
                        <% genres.forEach(genre => { %>
                            <option value="<%= genre %>"><%= genre %></option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <br>
            <div class="text-end">
                <input class="btn btn-secondary" type="button" id="resetButton" value="Reset">
                <input class="btn btn-primary" type="button" id="searchButton" value="Search">
            </div>
        </form>
        <div class="row">
            <div class="col-6">
                <h2>ASKBOOK</h2>
            </div>
            <div class="col-6 text-end">
                <div id="pagination"></div>
            </div> 
        </div>
        <hr>
        <br>
        <table class="table" id="bookTable">
            <thead class="table-dark">
                <tr>
                    <td>No.</td>
                    <td>Title</td>
                    <td>Abstract</td>
                    <td>Author</td>
                    <td>Genre</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
    
      



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <%- include('data_fetch') %>
</body>
</html>